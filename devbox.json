{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "poetry@latest",
    "python312@latest"
  ],
  "env": {
    "POETRY_CACHE_DIR": "$PWD/.poetry"
  },
  "shell": {
    "init_hook": [
      "poetry install"
    ],
    "scripts": {
      "format": [
        "poetry run ruff format ."
      ],
      "test": [
        "poetry run pytest"
      ],
      "check": [
        "poetry run ruff check .",
        "poetry run mypy"
      ],
      "depcheck": [
        "poetry run fawltydeps"
      ],
      "dev":[
        "poetry run python manage.py runserver localhost:${PORT:-3000}"
      ]
    }
  }
}
